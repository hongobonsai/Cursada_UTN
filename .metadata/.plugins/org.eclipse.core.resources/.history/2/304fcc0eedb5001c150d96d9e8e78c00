int funcionRealiceDescuento(int *numero, int porcentajeDescuento, int *valorDescuento, int *numeroConDescuento);

int main(void) {
	system("cls");
	setbuf(stdout, NULL);

	int numeroUno;
	int porcentajeDescuento = 0.5;
	int valorDescuento;
	int numeroConDescuento;

	printf("NUMERO:");
	scanf("%d", &numeroUno);
	funcionRealiceDescuento(numeroUno, porcentajeDescuento, &valorDescuento, &numeroConDescuento);

	printf("%d", numeroConDescuento);

	return EXIT_SUCCESS;
}

int funcionRealiceDescuento(int *numero, int porcentajeDescuento, int *valorDescuento, int *numeroConDescuento){

	printf("%d", *numero);
	return 0;
}
